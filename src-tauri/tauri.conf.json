{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "readtext",
  "version": "0.1.0",
  "identifier": "readtext",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "readtext",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost https://* http://* data:; connect-src 'self' ipc:;",
      "assetProtocol": {
        "enable": true,
        "scope": ["**/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "rpm",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["md"],
        "mimeType": "image/plaintext",
        "rank": "Default"
      }
    ]
  },
  "plugins": {
    "cli": {
      "description": "readtext",
      "args": [
        {
          "name": "path",
          "index": 1,
          "description": "Path of markdown file",
          "takesValue": true
        }
      ]
    }
  }
}
